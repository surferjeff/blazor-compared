@page
@model CounterModel
@{
    ViewData["Title"] = "Counter";
    var headers = ViewContext.HttpContext.Request.Headers;
    if (headers["HX-Request"].Contains("true")
        && !headers["HX-Boosted"].Contains("true"))
    {
        Layout = "_LayoutBodyOnly";
    }
}

<form id=increment-form hx-get='@HttpContext.Request.Path' hx-swap="outerHTML">
    <h1>Counter</h1>
    <p role="status">Current count: @Model.Count</p>
    <input type="hidden" name="Count" value="@(Model.Count + 1)">
    <input type="submit" class="btn btn-primary" id="ClickMeButton" value="Click me">
</form>
