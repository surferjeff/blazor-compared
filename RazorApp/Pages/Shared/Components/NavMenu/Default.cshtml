@model ViewComponents.NavMenu
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BlazorApp</a>
            <button title="Navigation menu" class="navbar-toggler"
                onclick="document.getElementById('toggle-menu').checked ^= 1">
                <span class="navbar-toggler-icon"></span>
            </button>
    </div>
</div>

<input type="checkbox" id="toggle-menu" class="visually-hidden">

<div id="nav-menu">
    <nav class="flex-column" hx-boost=true hx-target="#main-article">
        <div class="nav-item px-3">
            <a class='nav-link @(Model.Path == "/" ? "active" : "")' href="/">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </a>
        </div>
        <div class="nav-item px-3">
            <a class='nav-link @(Model.Path == "/counter" ? "active" : "")' href="/counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Counter
            </a>
        </div>
        <div class="nav-item px-3">
            <a class='nav-link @(Model.Path == "/fetchdata" ? "active" : "")' href="/fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Fetch data
            </a>
        </div>
    </nav>
</div>
