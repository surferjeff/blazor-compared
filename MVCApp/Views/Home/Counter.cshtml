@{
    ViewData["Title"] = "Counter";
}

<h1>Counter</h1>

<p role="status">Current count: <span id="countSpan">0</span></p>

<button class="btn btn-primary" onclick="onClick()">Click me</button>

<script>
    let count = 0;
    function onClick() {
        document.getElementById("countSpan").innerText = ++count;
    }
</script>